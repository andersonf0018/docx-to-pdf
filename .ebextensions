packages:
  yum:
    libreoffice: []

commands:
  01_download_libreoffice:
    command: wget https://download.documentfoundation.org/libreoffice/stable/7.2.5/rpm/x86_64/LibreOffice_7.2.5_Linux_x86-64_rpm.tar.gz
    cwd: /tmp
  02_extract_libreoffice:
    command: tar -xzf LibreOffice_7.2.5_Linux_x86-64_rpm.tar.gz
    cwd: /tmp
  03_install_libreoffice:
    command: yum localinstall -y /tmp/LibreOffice_7.2.5.2_Linux_x86-64_rpm/RPMS/*.rpm
    cwd: /tmp