packages:
  yum:
    libXinerama.x86_64: []
    cups-libs: []
    dbus-glib: []
    libxslt: []
    wget: []
commands:
  01-install-wget:
    command: sudo yum install wget
  02-download-libreoffice:
    command: wget https://tdf.mirror.liquidtelecom.com/libreoffice/stable/24.2.4/rpm/x86_64/LibreOffice_24.2.4_Linux_x86-64_rpm.tar.gz
    cwd: /tmp
    test: "[ ! -f /tmp/LibreOffice_24.2.4_Linux_x86-64_rpm.tar.gz ]"
  03-untar:
    command: sudo tar -xvf LibreOffice_24.2.4_Linux_x86-64_rpm.tar.gz
    cwd: /tmp
    test: "[ ! -d /tmp/LibreOffice_24.2.4_Linux_x86-64_rpm ]"
  04-install:
    command: sudo yum localinstall *.rpm -y
    cwd: /tmp/LibreOffice_24.2.4.2_Linux_x86-64_rpm/RPMS
  05-link-libreoffice:
    command: sudo ln -sf /opt/libreoffice24.2/program/soffice /usr/bin/libreoffice
    test: "[ ! -f /usr/bin/libreoffice ]"
  06-verify:
    command: libreoffice --version